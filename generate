#!/bin/bash

scompile () {
echo "#!/bin/bash" > ../$1
echo "shift $2" >> ../$1
echo "echo layer:\$1" >> ../$1
echo "case \$1 in" >> ../$1
}
compile () {
for f in *;do
    if [[ -d $f ]];then
        echo $f is directory
    else
        if [[ $(echo -n $f | tail -c 4 ) == ".tmp" ]] ; then
            f=${f:0:${#f}-4}
            echo .tmp removed from $f
            echo $f compile to $1
            echo "$f)" >> ../$1
            sed 1d $f.tmp >> ../$1
            echo ";;" >> ../$1
        else
            echo $(echo -n $f | tail -c 4 ) is not = to .tmp
            echo $f compile to $1
            echo "$f)" >> ../$1
            sed 1d $f >> ../$1
            echo ";;" >> ../$1
        fi
    fi
done
}
ecompile () {
echo "*)" >>../$1
echo "echo subcommand not found layer:$2 command:\$1" >> ../$1
echo "esac" >> ../$1
echo 
}

recursion () {
echo re $1
n=$1
if ls -d */;then
    echo n:$n
    echo n:$n
    for f in */;do
        cd $f
        pwd
        echo layer $n
        recursion $n
    done
fi
name=$(basename $(pwd)).tmp
scompile $name $n
compile $name
ecompile $name $n
echo +1
cd ..
}
cd walsrc
recursion 0
mv walsrc.tmp walpak
chmod +x walpak
pwd


